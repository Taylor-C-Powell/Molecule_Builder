# MolBuilder API Configuration
JWT_SECRET_KEY=change-me-to-a-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# Rate limits (requests per minute)
RATE_LIMIT_FREE=10
RATE_LIMIT_PRO=60
RATE_LIMIT_TEAM=120
RATE_LIMIT_ACADEMIC=30

# Expensive endpoint hourly limits
EXPENSIVE_HOURLY_FREE=5
EXPENSIVE_HOURLY_PRO=30
EXPENSIVE_HOURLY_TEAM=60
EXPENSIVE_HOURLY_ACADEMIC=15

# Molecule store
MOLECULE_STORE_MAX=10000

# Database paths
AUDIT_DB_PATH=molbuilder_audit.db
USER_DB_PATH=molbuilder_users.db

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Admin bootstrap (set once on first deploy, creates an admin key on startup)
ADMIN_BOOTSTRAP_EMAIL=

# Stripe billing (leave empty to disable billing endpoints)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_MONTHLY_PRICE_ID=
STRIPE_PRO_YEARLY_PRICE_ID=
